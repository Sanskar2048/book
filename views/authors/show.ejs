<div class="container-fluid center">
    <h2>
        <small class="text-muted">
            <%= author.name %>
        </small>
        <a href="/authors/<%= author.id %>/edit"><button type="submit" class="btn btn-outline-primary">Edit</button></a>
        <%- include("../partials/delete_form" ,{ url : `/authors/${author.id}`})%>
    </h2>
</div>
<br>
<div class="container-fluid ">
    <% if(bookByAuthor.length> 0) { %>
        <small class="text-muted">
            <h2>Books by <%= author.name %> :- </h2>
        </small>
        <% bookByAuthor.forEach( book=>{ %>
            <a href="/books/<%= book.id %>"><img class="border border-dark border-4 rounded m-1 center"
                    src="<%= book.CoverImagePath %>" alt="img" width="250" height="300"></a>
            <% }) %>
                <% } %>
</div>