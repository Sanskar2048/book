<div class="container-fluid" style="text-align: left; font-family:Georgia, 'Times New Roman', Times, serif;">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="title" value="<%= book.title %>">
    </div>

    <div class="form-group">
        <label>Author</label>
        <select name="author" class="form-in">
            <% authors.forEach(author=> { %>
                <% if(author.id==book.author) { %>
                    <option selected label="<%= author.name %>" value="<%= author.id %>">
                        <% } else { %>
                    <option label="<%= author.name %>" value="<%= author.id %>">
                        <% } %>
                            <% }) %>
        </select>
    </div>

    <div class="form-group">
        <label>Publish Date</label>
        <input type="date" name="publishDate"
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" class="form-in">
        <!-- 202-8-12T12:23 -->
    </div>

    <div class="form-group">
        <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>" class="form-in" placeholder="Page Count">
    </div>

    <div class="form-group">
        <label>Cover</label>
        <input type="file" name="cover" class="form-in">
    </div>

    <div class="form-group">
        <textarea name="description" class="form-in" placeholder="Description"><%= book.description %></textarea>
    </div>
</div>