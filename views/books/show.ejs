<div class="container-fluid m-2">
<div class="card center" style="width: 18rem;">
    <img class="card-img-top" src="<%= book.CoverImagePath %>" alt="Card image cap">
    <div class="card" style="width: 18rem;">
        <div class="card-header">
            <h2>
                <%= book.title %>
            </h2>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Author : <%= author.name%>
            </li>
            <li class="list-group-item">Publish Date : <%= book.publishDate.toDateString()%>
            </li>
            <li class="list-group-item">Page Count : <%= book.pageCount%>
            </li>
            <li class="list-group-item">Description :
                <%= book.description%>
            </li>
        </ul>
    </div>
    <div>
        <a href="/books/<%= book.id %>/edit"><button type="submit" class="btn btn-outline-primary">Edit</button></a>
        <%- include("../partials/delete_form" ,{ url : `/books/${book.id}`})%>
        <a href="/authors/<%=author.id%>"><button type="submit" class="btn btn-outline-success">View Author</button></a>
    </div>
</div>
</div>